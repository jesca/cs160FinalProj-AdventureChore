<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    android:background="@drawable/graybackground"
    tools:context=".ChoreActivity" >
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp" 
        android:gravity="center"
        android:layout_weight="10">

		<ImageView
		    android:id="@+id/chorePageIcon"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:src="@drawable/ic_launcher" />

    	<TextView
        	android:id="@+id/choreTitle"
        	android:layout_width="wrap_content"
        	android:layout_height="match_parent"
        	android:text="Chore_Name"
        	android:gravity="center"
        	android:textSize="30dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/choreDesc"
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:layout_weight="40" />

    <TextView
        android:id="@+id/choreStatus"
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:layout_weight="3"
        android:gravity="bottom"
        android:text="@string/status" />

    <TextView
        android:id="@+id/Rewards"
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:layout_weight="4"
        android:textSize="22dp"
        android:text="Rewards"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp" 
        android:gravity="center_horizontal"
        android:layout_weight="5">

        <TextView
            android:id="@+id/chorePoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chorePoints"
            android:textSize="17dp"
            android:paddingRight="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/PointIcon"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_launcher" />

    </LinearLayout>

    <Button
        android:id="@+id/completeChore"
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:layout_weight="7"
        android:onClick="onClick"
        android:text="@string/completeChore" />

</LinearLayout>